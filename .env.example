# ============ Runtime ============
DEBUG=false

# ============ Database ============
DATABASE_URL=mysql+aiomysql://root:password@127.0.0.1:3306/shareusbot?charset=utf8mb4
SQL_ECHO=false
AUTO_CREATE_TABLES=true

# ============ Redis ============
REDIS_URL=redis://127.0.0.1:6379/0

# ============ Groups ============
GROUP_TEST=
GROUP_ADMIN=
GROUP_CHAT=
GROUP_RES=
GROUP_GPT=

# ============ Admin ============
ADMINS=
BLACKLIST_COMMAND=/拉黑

# ============ Query ============
QUERY_GROUPS=res,test
QUERY_DAILY_LIMIT=5
QUERY_DAILY_KEY_PREFIX=qiuwen:
QUERY_ERROR_KEY_PREFIX=qiuwen:warning:
QUERY_ERROR_WEEKLY_LIMIT=3

# ============ Archive ============
ARCHIVE_TMP_DIR=./data/archive_tmp
ARCHIVE_GROUPS=res,test
ARCHIVE_KEEP_LOCAL_COPY=true
ARCHIVE_WATERMARK_ENABLED=true
ARCHIVE_WATERMARK_TEXT=shareus.top

# ============ MeiliSearch ============
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_API_KEY=
MEILISEARCH_INDEX=archived_file

# ============ Cloudflare R2 ============
R2_ENDPOINT=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET=
R2_PUBLIC_URL=
R2_PATH_PREFIX=r2

# ============ Short URL ============
SHORT_URL_ENDPOINT=
SHORT_URL_TOKEN=
SHORT_URL_BEARER=true

# ============ Group Moderation ============
BAN_WORDS=
BAN_WORD_GROUPS=res
BAN_WORD_MUTE_SECONDS=600

# ============ Alist ============
ALIST_BASE_URL=
ALIST_USERNAME=
ALIST_PASSWORD=
ALIST_LOGIN_ENDPOINT=/api/auth/login
ALIST_META_GET_ENDPOINT=/api/admin/meta/get
ALIST_META_UPDATE_ENDPOINT=/api/admin/meta/update
ALIST_META_ID=5

# ============ Scheduler ============
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Shanghai
SCHEDULER_DAILY_REPORT=true
SCHEDULER_WEEKLY_REPORT=true
SCHEDULER_MONTHLY_REPORT=true
SCHEDULER_QUERY_POLLING=true
SCHEDULER_QUERY_FEEDBACK=true
SCHEDULER_HOT_QUERY_RANK=true
SCHEDULER_RESET_PASSWORD=true
SCHEDULER_NONSENSE=true
SCHEDULER_REFRESH_QQ_INFO=true
SCHEDULER_BLACKLIST_CHECK=true
SCHEDULER_CLEAR_INVALID=true
SCHEDULER_CLEAR_INVALID_NOTICE=true
NONSENSE_SEND_HOURS=9,11,14,18,20,23
NONSENSE_API_URL=https://api.uomg.com/api/rand.qinghua?format=text
NONSENSE_MAX_REQUEST_TIMES=5
QQ_INFO_API_URL=https://api.szfx.top/qq/info/?qq=
QUERY_POLLING_TIMEOUT_DAYS=7
SCHEDULER_REPORT_OUTPUT_DIR=./data/reports
